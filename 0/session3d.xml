<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <EXPANSIONS>
        <E COMPOSITE="C[100,101]" NUMMODES="7" TYPE="MODIFIED" FIELDS="u,v,w" />
        <E COMPOSITE="C[100,101]" NUMMODES="6" TYPE="MODIFIEDQUADPLUS1" FIELDS="p" />
    </EXPANSIONS>
    <CONDITIONS>
        <SOLVERINFO>
            <I PROPERTY="EQTYPE"            VALUE="UnsteadyNavierStokes" />
            <I PROPERTY="SolverType"        VALUE="VelocityCorrectionScheme" />
            <I PROPERTY="EvolutionOperator" VALUE="Nonlinear"/>
            <I PROPERTY="AdvectionForm"     VALUE="Convective"/>
            <I PROPERTY="Projection"        VALUE="Galerkin" />
            <!--I PROPERTY="GlobalSysSoln" VALUE="XxtMultiLevelStaticCond"/-->
            <I PROPERTY="TimeIntegrationMethod" VALUE="IMEXOrder3" />
            <!--I PROPERTY="DEALIASING" VALUE="True" />
            <I PROPERTY="SPECTRALDEALIASING" VALUE="True" />
            <I PROPERTY="SPECTRALHPDEALIASING" VALUE="True" /-->
            <I PROPERTY="SpectralVanishingViscosity" VALUE="DGKernel" />
            <I PROPERTY="SpectralVanishingViscosityHomo1D" VALUE="True" />
	        <I PROPERTY="USEFFT"            VALUE="FFTW"/>
            <I PROPERTY="HOMOGENEOUS"       VALUE="1D"/>
	        <I PROPERTY="GJPStabilisation" VALUE="SemiImplicit"/>
        </SOLVERINFO>
	
        <GLOBALSYSSOLNINFO>
	    <V VAR="u,v,w">
	        <I PROPERTY="GlobalSysSoln"	VALUE="IterativeMultiLevelStaticCond" />
	        <I PROPERTY="Preconditioner"	VALUE="Diagonal"/>
	        <I PROPERTY="IterativeSolverTolerance" VALUE="1e-9"/>
	    </V>

	    <V VAR="p">
		<!--I PROPERTY="GlobalSysSoln"	VALUE="XxtMultiLevelStaticCond"/-->
		<I PROPERTY="GlobalSysSoln"	VALUE="IterativeMultiLevelStaticCond" />
		<!--I PROPERTY="Preconditioner"	VALUE="Diagonal"/>
		<I PROPERTY="IterativeSolverTolerance" VALUE="1e-7"/-->
	    </V>
        </GLOBALSYSSOLNINFO>

        <PARAMETERS>
            <P> TimeStep      = 1.0e-4                                           </P> <!-- Time step -->   
            <P> NumSteps      = 100000                                           </P> <!-- Number of step -->
            <P> IO_CheckSteps = 1000                                           </P> <!-- Number of step to write the intermediate results -->
            <P> IO_InfoSteps  = 100                                           </P> <!-- Number of step to print information -->
            <P> IO_CFLSteps   = 100                                           </P> <!-- Number of step to print CFL number  -->
            <P> Re            = 301600.0                                  </P>
            <P> Kinvis        = 1./Re                                	   </P>
            <P> HomModesZ     = 8                       	           </P>
            <P> LZ            = 0.25         	   </P>

            <!--  
             AoA : angle of attack
             Uinf: Free stream veloticy magnitude
             Uinfx : x component of free stream velcoity
             Uinfy : y component of free stream velcoity
            -->
        <P> AoA           = (0.0)*PI/180              	           </P>
f        <P> Uinf          = 1.0     	                           </P>
        <P> Uinfx         = Uinf*cos(AoA)         	             </P>
        <P> Uinfy         = Uinf*sin(AoA)          	             </P>
        </PARAMETERS> 
        <VARIABLES>
            <V ID="0"> u </V>
            <V ID="1"> v </V>
            <V ID="2"> w </V>
            <V ID="3"> p </V>
        </VARIABLES>
        <BOUNDARYREGIONS>
            <B ID="0"> C[5,6] </B>      <!-- airfoil wall-->
            <B ID="1"> C[1]       </B>      <!-- Inflow -->
            <B ID="2"> C[3]       </B>      <!-- outflow -->
            <B ID="3"> C[2]       </B>      <!-- Far Field -->
            <B ID="4"> C[4]   </B>      <!-- Far Field -->
        </BOUNDARYREGIONS>
        <BOUNDARYCONDITIONS>
            <REGION REF="0"> <!-- airfoil wall -->
                <D VAR="u" VALUE="0" />
                <D VAR="v" VALUE="0" />
                <D VAR="w" VALUE="0" />
                <N VAR="p" USERDEFINEDTYPE="H" VALUE="0" />
            </REGION>
            <REGION REF="1"> <!-- Inflow -->
       		<D VAR="u" VALUE="Uinfx" />
                <D VAR="v" VALUE="Uinfy" />
                <D VAR="w" VALUE="0" />
	            <N VAR="p" USERDEFINEDTYPE="H" VALUE="0" />  
            </REGION>
            <REGION REF="2"> <!-- outflow -->
                <N VAR="u" USERDEFINEDTYPE="HOutflow" VALUE="0" />
	            <N VAR="v" USERDEFINEDTYPE="HOutflow" VALUE="0" />
	            <N VAR="w" USERDEFINEDTYPE="HOutflow" VALUE="0" />
	            <D VAR="p" USERDEFINEDTYPE="HOutflow" VALUE="0" />
            </REGION>
            <REGION REF="3"> <!-- upper side -->
       		    <D VAR="u" VALUE="Uinfx" />
                <D VAR="v" VALUE="Uinfy" />
                <D VAR="w" VALUE="0" />
	        <N VAR="p" USERDEFINEDTYPE="H" VALUE="0" />  
            </REGION>
            <REGION REF="4"> <!-- lower side -->
       		    <D VAR="u" VALUE="Uinfx" />
                <D VAR="v" VALUE="Uinfy" />
                <D VAR="w" VALUE="0" />
	        <N VAR="p" USERDEFINEDTYPE="H" VALUE="0" />  
            </REGION>
        </BOUNDARYCONDITIONS>
      
        <!-- Specify the initial condition -->
        <FUNCTION NAME="InitialConditions">
            <F VAR="u,v,p" FILE="s7055.rst" />
            <E VAR="w" VALUE="0.05*awgn(1.)" />
        </FUNCTION>
      
    </CONDITIONS>
    
    <FILTERS>
        <FILTER TYPE="AeroForces">
            <PARAM NAME="OutputFile"> aeroForces </PARAM>
            <PARAM NAME="OutputFrequency"> 10 </PARAM>
            <PARAM NAME="Boundary"> B[0] </PARAM>
            <PARAM NAME="MomentPoint">0.0 0. 0. </PARAM>
        </FILTER>
    </FILTERS>

</NEKTAR>
